<script>
    $(document).ready(function () {
        // Auto numeric
        $('.auto').autoNumeric('init');

        $('#editPassword').click(function () {
            if ($.trim($('#oldPass').val()) != '' && $.trim($('#password').val()) != '' && $.trim($('#password2').val()) != '' && ($.trim($('#password').val()) == $.trim($('#password2').val()))) {
                $.ajax({
                    url: "/Admin/TaiKhoan/edit",
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    dataType: 'json',
                    data: JSON.stringify({
                        Password: $('#password').val(),
                        OldPassword: $('#oldPass').val(),
                    }),
                    success: function (data) {
                        if (data > 0) {
                            alert('Đổi mật khẩu thành công!');
                            $('#doiMatKhau').modal('hide');
                            window.location.href = "/Admin/TaiKhoan/DangNhap";
                        }
                        else {
                            if (data == -1) {
                                $('#oldPass').validationEngine('showPrompt', 'Mật khẩu cũ không chính xác!', 'error', true);
                            }
                            else errorFunc;
                        }
                    },
                    error: function (xhr, status, error) {
                        alert(error);
                    },
                    async: false
                });
            }
            return false;
        });
    });

    function logout() {
        $.ajax({
            url: "/Admin/TaiKhoan/logout",
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            success: successFunc,
            error: errorFunc,
            async: false
        });

        return false;
    }

    function successFunc() {
        window.location.href = "/Admin/TaiKhoan/DangNhap";
    }

    function errorFunc() {
        alert('Xảy ra lỗi trong quá trình thực hiện!');
    }
